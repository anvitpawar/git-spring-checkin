import React from "react";
import { render, screen, fireEvent } from "@testing-library/react";
import '@testing-library/jest-dom';
import DiassInput from "./DiassInput";

describe("DiassInput Component", () => {
  it("renders input field with correct type", () => {
    render(<DiassInput setInputValue={jest.fn()} type="password" />);
    const inputElement = screen.getByRole("textbox");
    expect(inputElement).toBeInTheDocument();
    expect(inputElement).toHaveAttribute("type", "password");
  });

  it("calls setInputValue on input change", () => {
    const mockSetInputValue = jest.fn();
    render(<DiassInput setInputValue={mockSetInputValue} />);
    
    const inputElement = screen.getByRole("textbox");
    fireEvent.change(inputElement, { target: { value: "Test Input" } });

    expect(mockSetInputValue).toHaveBeenCalledTimes(1);
    expect(mockSetInputValue).toHaveBeenCalledWith("Test Input");
  });
});