import React from "react";
import { render, screen } from "@testing-library/react";
import "@testing-library/jest-dom";
import VerticalDiaasTable from "./VerticalDiaasTable";

describe("VerticalDiaasTable Component", () => {
  
  it("renders the heading correctly", () => {
    render(<VerticalDiaasTable heading="Test Heading" Child="Test Child Content" />);
    expect(screen.getByText("Test Heading")).toBeInTheDocument();
  });

  it("renders the child content correctly", () => {
    render(<VerticalDiaasTable heading="Test Heading" Child="Test Child Content" />);
    expect(screen.getByText("Test Child Content")).toBeInTheDocument();
  });

  it("applies CSS classes correctly", () => {
    render(<VerticalDiaasTable heading="Test Heading" Child="Test Child Content" />);
    expect(screen.getByText("Test Heading")).toHaveClass("verticalContainerHeading");
    expect(screen.getByText("Test Child Content")).toHaveClass("verticalContainerChild");
  });

  it("renders without crashing when no props are passed", () => {
    render(<VerticalDiaasTable />);
    expect(screen.getByText("undefined")).toBeInTheDocument(); // Since no props are passed
  });

});